                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:siShape="@raw/a"
                        app:siBorderWidth="3dp"
                        app:siBorderColor="@color/material_orange_500"/>
                    <com.as.fortywest.font.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color_grey_800"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:singleLine="true"
                        android:text="Home Decor"/>
                </LinearLayout>
            </com.as.fortywest.view.MaterialRippleLayout>
            <com.as.fortywest.view.MaterialRippleLayout
                android:id="@+id/KitchenGalleryButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                style="@style/RippleStyle"
                android:background="@drawable/selector_background_empty_custom">
                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
