        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.as.fortywest.view.MaterialRippleLayout
                android:id="@+id/KidsGalleryButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                style="@style/RippleStyle"
                android:background="@drawable/selector_background_empty_custom">
                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:orientation="vertical">
                    <com.as.fortywest.view.siv.ShapeImageView
                        android:id="@+id/ivKidsGalleryButton"
                        style="@style/ImageViewStyle"
                        android:layout_weight="1"
                        app:siShape="@raw/a"
                        app:siBorderWidth="3dp"
                        app:siBorderColor="@color/material_orange_500"/>
                    <com.as.fortywest.font.RobotoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main_color_grey_800"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:singleLine="true"
                        android:text="Kids"/>
                </LinearLayout>
            </com.as.fortywest.view.MaterialRippleLayout>
            <com.as.fortywest.view.MaterialRippleLayout
                android:id="@+id/MiscGalleryButton"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:layout_weight="0.5"
                style="@style/RippleStyle"
                android:background="@drawable/selector_background_empty_custom">
                <LinearLayout
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="30dp"
                    android:orientation="vertical">
                    <com.as.fortywest.view.siv.ShapeImageView
                        android:id="@+id/ivMiscGalleryButton"
                        style="@style/ImageViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:siShape="@raw/a"
                        app:siBorderWidth="3dp"
                        app:siBorderColor="@color/material_orange_500"/>
                    <com.as.fortywest.font.RobotoTextView
                        android:layout_width="wrap_content"
