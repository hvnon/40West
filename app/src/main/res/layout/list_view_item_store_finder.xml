<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.as.fortywest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:contentDescription="@string/cd_main_image"
            android:scaleType="centerCrop" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.as.fortywest.font.RobotoTextView
                android:id="@+id/store_name_text"
                style="@style/TextViewAppearance.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/main_color_grey_800"
                android:textSize="16sp"
                app:typeface="robotoRegular" />
            <com.as.fortywest.font.RobotoTextView
                android:id="@+id/store_distance"
                style="@style/TextViewAppearance.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_color_grey_800"
                android:textSize="12sp"
                app:typeface="robotoRegular" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_color_grey_500" />
</LinearLayout>