<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.as.fortywest"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.as.fortywest.StoreDetailActivity"
    tools:showIn="@layout/activity_store_detail"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom"  >
        <com.as.fortywest.font.RobotoTextView
            android:id="@+id/store_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:maxLines="2"
            android:text="Big Johns Furniture"
            android:textColor="@color/material_blue_700"
            android:textSize="20sp"
            app:typeface="robotoRegular" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/accent"
            android:text="Store Open"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <com.as.fortywest.font.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="Address"
                android:textColor="@color/material_blue_700"
                android:textSize="14sp"
                app:typeface="robotoRegular" />
            <com.as.fortywest.font.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="123 East St, Beverly Hills, CA, 90210"
                android:textColor="@color/material_grey_500"
                android:textSize="12sp"
                app:typeface="robotoRegular" />
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/material_blue_500"
            android:text="MAP"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_color_500" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom"  >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <com.as.fortywest.font.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="Opening Hours"
                android:textColor="@color/material_blue_700"
                android:textSize="14sp"
                app:typeface="robotoRegular" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Monday"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="9:00 am - 4:00 pm"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Tueday"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="9:00 am - 4:00 pm"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Wednesday"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="9:00 am - 4:00 pm"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Thursday"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="9:00 am - 9:00 pm"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Friday"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="9:00 am - 4:00 pm"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Saturday"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="9:00 am - 6:00 pm"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Sunday"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="Closed"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_color_500" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom"  >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <com.as.fortywest.font.RobotoTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="Contact Information"
                android:textColor="@color/material_blue_700"
                android:textSize="14sp"
                app:typeface="robotoRegular" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Phone"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="555 555 555"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:maxLines="2"
                    android:text="Email"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
                <com.as.fortywest.font.RobotoTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="sales@bjc.com"
                    android:textColor="@color/material_grey_500"
                    android:textSize="12sp"
                    app:typeface="robotoRegular" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_color_500" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom"  >
        <com.as.fortywest.font.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:maxLines="2"
            android:text="Request Instore Assistance"
            android:textColor="@color/material_blue_grey_700"
            android:textSize="14sp"
            app:typeface="robotoRegular" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/material_blue_500"
            android:text="REQUEST"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>
